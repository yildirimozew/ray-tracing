{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "raytracer gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/code_template/code_template/raytracer",
            "args": ["${workspaceFolder}/test_scenes/inputs/simple.xml"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/code_template/code_template/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            /*"postDebugTask": "view"*/
        },

    ]
}